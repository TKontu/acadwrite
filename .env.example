# AcadWrite Environment Configuration Example
# Copy this file to .env and fill in your values

# FileIntel Configuration
# FileIntel is required for RAG queries and document intelligence
FILEINTEL_BASE_URL=http://localhost:8000
FILEINTEL_API_KEY=your-api-key-here
FILEINTEL_TIMEOUT=300
FILEINTEL_MAX_RETRIES=3

# LLM Configuration
# Configure your LLM provider (OpenAI-compatible API)
LLM_PROVIDER=openai
LLM_MODEL=gemma3-12b-awq
LLM_BASE_URL=http://192.168.0.247:9003/v1
LLM_API_KEY=ollama
LLM_TEMPERATURE=0.1
LLM_CONTEXT_LENGTH=128000
LLM_RATE_LIMIT=999

# Writing Configuration
WRITING_CITATION_STYLE=footnote
WRITING_MARKDOWN_DIALECT=gfm
WRITING_INCLUDE_RELEVANCE_SCORES=false
WRITING_MAX_WORDS_PER_SECTION=500

# Generation Configuration
GENERATION_CONTEXT_WINDOW=500
GENERATION_MIN_SOURCES_PER_SECTION=3
GENERATION_MAX_SOURCES_PER_SECTION=10
